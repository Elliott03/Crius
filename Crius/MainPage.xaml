<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crius.MainPage"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image Source="crius_logo.png" Margin="0, 20, 0, 0" />
            <Label Text="Password" Margin="0, 20, 0, 0"/>
            <Entry x:Name="Password" Completed="Login" Placeholder="Enter password" IsPassword="True" />
            <Label x:Name="ErrorMessage" TextColor="Red" Text="" />
            <Button Text="Login" Clicked="Login" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
